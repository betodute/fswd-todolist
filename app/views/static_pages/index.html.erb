<%= javascript_pack_tag 'index', 'data-turbolinks-track': 'reload' %>

<div class="container">
  <div class="row">
    <div class="col-12">
      <h1 class="text-center mt-4">To Do List</h1>
      <div class="row" id="tasks"></div>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <h3 class="text-center m-1">Add New Task</h3>
      <div class="row" id="addtask">
        <form id="addTaskForm">
          <div class="input-group mb-3">
            <input type="text" class="form-control" id="newTaskContent" placeholder="Task content" required>
            <div class="input-group-append">
              <button class="btn btn-primary" type="submit">Add Task</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
